@page
@model MTLcourts.Pages.AddCourtModel
@{
    ViewData["Title"] = "Add Court";
}

<h1>Create new court</h1>

    <div class="mt-3">
        <form method="post" enctype="multipart/form-data">
        <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group row">
                <label asp-for="NewCourt.Name" class="col-sm-2 col-form-label">Name</label>
                <div class="col-sm-10">
                <input asp-for="NewCourt.Name" class="form-control"/>
                <span asp-validation-for="NewCourt.Name" class="text-danger"></span>
                </div>
            </div>
             <div class="form-group row">
                <label asp-for="NewCourt.Address" class="col-sm-2 col-form-label">Address</label>
                <div class="col-sm-10">
                <input asp-for="NewCourt.Address" class="form-control"/>
                <span asp-validation-for="NewCourt.Address" class="text-danger"></span>
                </div>
            </div>
             <div class="form-group row">
                <label asp-for="NewCourt.PostalCode" class="col-sm-2 col-form-label">Postal Code</label>
                <div class="col-sm-10">
                    <input asp-for="NewCourt.PostalCode" class="form-control"/>
                <span asp-validation-for="NewCourt.PostalCode" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="NewCourt.Description" class="col-sm-2 col-form-label">Description</label>
                <div class="col-sm-10">
                <textarea asp-for="NewCourt.Description" id = "myTextarea"  class="form-control" rows="5"></textarea>
                <span asp-validation-for="NewCourt.Description" class="text-danger"></span>
                </div>
            </div>
            @* <div class="form-group row">
                <label asp-for="NewCourt.PhotoUrl" class="col-sm-2 col-form-label">Photo Url - tp replace with upload</label>
                <div class="col-sm-10">
                <input asp-for="NewCourt.PhotoUrl"  class="form-control"/>
                <span asp-validation-for="NewCourt.PhotoUrl" class="text-danger"></span>
                </div>
            </div> *@

             <div class="form-group row">
                <label asp-for="Upload" class="col-sm-2 col-form-label">Image</label>
                <div class="col-sm-10">
                    <input asp-for="Upload"  class="form-control"/>
                <span asp-validation-for="Upload" class="text-danger"></span>
                </div>
            </div>



            <div class="form-group row">
                <label asp-for="NewCourt.AvgRating" class="col-sm-2 col-form-label">Rating</label>
                <div class="form-check form-check-inline">
                <input asp-for="NewCourt.AvgRating" class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="1" checked>
                <label class="form-check-label" for="inlineRadio1">1</label>
                </div>
                <div class="form-check form-check-inline">
                <input  asp-for="NewCourt.AvgRating" class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="2">
                <label class="form-check-label" for="inlineRadio2">2</label>
                </div>
                <div class="form-check form-check-inline">
                <input  asp-for="NewCourt.AvgRating" class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="3">
                <label class="form-check-label" for="inlineRadio2">3</label>
                </div>
                <div class="form-check form-check-inline">
                <input  asp-for="NewCourt.AvgRating" class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="4">
                <label class="form-check-label" for="inlineRadio2">4</label>
                </div>
                <div class="form-check form-check-inline">
                <input  asp-for="NewCourt.AvgRating" class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="5">
                <label class="form-check-label" for="inlineRadio2">5</label>
                </div>
                 <span asp-validation-for="NewCourt.AvgRating" class="text-danger"></span>
              
            </div>

            
            <div class="form-group">
                <input type="submit" class="btn btn-primary">Add Court</button>
                </div>

        </form>
    </div> 


