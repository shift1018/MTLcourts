@page
@model MTLcourts.Pages.CourtEditModel
@{
    ViewData["Title"] = "Edit Court";
}
<h1 class="page-title">Edit court</h1>

<div class="mt-3">
    <form method="post" enctype="multipart/form-data">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group row">
            <label asp-for="EditCourt.Name" class="col-sm-2 col-form-label">Name</label>
            <div class="col-sm-10">
                <input asp-for="EditCourt.Name" class="form-control" />
                <span asp-validation-for="EditCourt.Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="EditCourt.Address" class="col-sm-2 col-form-label">Address</label>
            <div class="col-sm-10">
                <input asp-for="EditCourt.Address" class="form-control" />
                <span asp-validation-for="EditCourt.Address" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="EditCourt.PostalCode" class="col-sm-2 col-form-label">Postal Code</label>
            <div class="col-sm-10">
                <input asp-for="EditCourt.PostalCode" class="form-control" />
                <span asp-validation-for="EditCourt.PostalCode" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="EditCourt.Description" class="col-sm-2 col-form-label">Description</label>
            <div class="col-sm-10">
                <textarea asp-for="EditCourt.Description" id="myTextarea" class="form-control" rows="5"></textarea>
                <span asp-validation-for="EditCourt.Description" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="EditCourt.CourtLatitude" class="col-sm-2 col-form-label">Latitude</label>
            <div class="col-sm-10">
                <input asp-for="EditCourt.CourtLatitude" class="form-control" />
                <span asp-validation-for="EditCourt.CourtLatitude" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="EditCourt.CourtLongitude" class="col-sm-2 col-form-label">Longitude</label>
            <div class="col-sm-10">
                <input asp-for="EditCourt.CourtLongitude" class="form-control" />
                <span asp-validation-for="EditCourt.CourtLongitude" class="text-danger"></span>
            </div>
        </div>




        @* <div class="form-group row">
            <label asp-for="EditCourt.PhotoUrl" class="col-sm-2 col-form-label">Photo Url - tp replace with upload</label>
            <div class="col-sm-10">
            <input asp-for="EditCourt.PhotoUrl" class="form-control"/>
            <span asp-validation-for="EditCourt.PhotoUrl" class="text-danger"></span>
            </div>
            </div> *@

        <div class="form-group row">
            <label asp-for="Upload" class="col-sm-2 col-form-label">Image</label>
            <div class="col-sm-10">
                <input asp-for="Upload" class="form-control">
                <span asp-validation-for="Upload" class="text-danger"></span>
            </div>
        </div>
        <br>

        <div class="form-group page-title">
            <button type="submit" class="btn btn-primary btn-info">Save</button>
        </div>

    </form>
</div>
