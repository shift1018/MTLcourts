            <p class="">@Model.court.Address</p>
            <h4 class="court-rating"><b>Rating:</b> @Model.court.AvgRating</h4>
            <p class="view-court-description">@Html.Raw(WebUtility.HtmlDecode(@Model.court.Description))</p>
