@page "{id:int}"
@model MTLcourts.Pages.DeleteModel
@{
}

<div class="login-reg-logout">
     <h4>Court Record</h4>
     <p>Id: @Model.Court.Id</p>
     <p>Address: @Model.Court.Address</p>
     
     <br>
     <h5>Are you sure you want to delete this record?</h5>
     <br>
     <a asp-page="/Court/ViewCourt" asp-route-id="@Model.Court.Id" class="btn btn-info mr-4">Cancel</a>
     <br><br>
     <form method="POST">
          <input type="hidden" asp-for="Court.Id" />
          <input type="submit" value="Yes, Delete" class="btn btn-info" />
     </form>

</div>
