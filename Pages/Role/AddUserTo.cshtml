@page "{Id}"
@model MTLcourts.Pages.AddUserToModel
@{
}

<h1>Edit User and Role</h1>
<div>
    <div class="col-md-12">
        <form method="post">
            <div asp-validation-summary= "All" class="text-danger"> </div>
            <div class="form-group row">
                <label asp-for="Id" class="col-sm-2">User ID:</label>
                <input asp-for="Id" class="col-sm-10 form-control" disabled/>
                <span asp-validation-for= "Id" class="text-danger"></span>
            </div>
            <div class="row">
                <label asp-for="Name">User Name:</label>
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for= "Name" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="RoleName" class="col">Add user to :</label>
                <input asp-for="RoleName" class="form-control"/>
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
        </form>
        
    </div>

</div>

