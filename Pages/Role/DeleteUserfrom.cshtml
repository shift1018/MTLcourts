@page "{Id}"
@model MTLcourts.Pages.DeleteUserfromModel
@{
}

<div class="login-reg-logout">
    <h1>Delete User From Role</h1>
    <br>
    <div class="col-md-4 register-container">

        <form method="post">
            <div asp-validation-summary="All" class="text-danger"> </div>
            <div class="form-group row registration-field">
                <label asp-for="Id" class="">User ID:</label>
                <input asp-for="Id" class="col-sm-10 form-control" disabled />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group row registration-field">
                <label asp-for="Name">User Name:</label>
                <input asp-for="Name" class="col-sm-10 form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group row registration-field">
                <label asp-for="RoleName">Delete user From :</label>
                <input asp-for="RoleName" class="col-sm-10 form-control" />
            </div>
            <br>
            <button type="submit" class="btn btn-primary btn-info">Delete</button>
        </form>

    </div>
</div>