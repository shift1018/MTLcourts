@page
@model MTLcourts.Pages.NEWModel
@inject UserManager<IdentityUser> UserManager
@{
    var currentuser = UserManager.GetUserAsync(User).Result;
}
<div class="login-reg-logout">
    <h1>Create new Intention</h1>
    <br>
    <div class="col-md-4 register-container">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger "></div>
            <div class="form-group row registration field">
                <label asp-for="Date" class="col-form-label">Date: </label>
                <input class="form-control" type="date" asp-for="Date" />
            </div>
            <div class="form-group row registration field">
                <label asp-for="Time" class="col-form-label">Time: </label>
                <select name="Time" class="form-control">
                    <option value="2:00pm">2:00 - 4:00 pm</option>
                    <option value="4:00pm">4:00 - 6:00 pm</option>
                    <option value="6:00pm">6:00 - 8:00 pm</option>
                    <option value="8:00pm">8:00 - 10:00 pm</option>
                </select>
            </div>
            <div class="form-group row registration field">
                <label asp-for="CourtsId" class="col-form-label">CourtsName: </label>
                <select name="CourtsId" class="form-control">
                    @foreach (var court in @Model.courtsList)
                    {
                        <option value="@court.Id">@court.Name</option>
                    }
                </select>
            </div>

            <div class="form-group row registration field">
                <label asp-for="NumOfPeople" class="col-form-label">NumOfPeople: </label>
                <input class="form-control col-2" asp-for="NumOfPeople" />
            </div>

            <div class="form-group row registration field">
                <input class="form-control col-2" asp-for="@currentuser.Id" hidden />
                <span asp-validation-for="currentuser" class="text-danger"></span>
            </div>
            <br>

            <div class="form-group">
                <button type="submit" class="btn btn-primary button-submit">Create</button>
            </div>

        </form>
    </div>

</div>
