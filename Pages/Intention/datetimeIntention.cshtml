@page 
@model MTLcourts.Pages.datetimeIntentionModel
@{
}
<h1>Sum of People:@Model.sum</h1>


<table class="table table-sm table-bordered table-bordered col-4">
    <tr>
    <th class="col-2">UserName</th>
    <th class="col-2">NumOfPeople</th>
    </tr>
    @foreach (var i in @Model.intentionsList)
    {
        <tr>
            <td class="col-2">@i.User.UserName </td>
            <td class="col-2">@i.NumOfPeople</td>
        </tr>  
        }         
</table>
<div class="col-3 ">
    <form method="post" class="col-8" >
        <div class="row form-group">
            <label asp-for="NumOfPeople">NumOfPeople:</label>
            <input asp-for="NumOfPeople" class="col-sm-10 form-control"/>
        </div>
        <div class="form-group">
        <button type="submit" class="btn btn-primary col-3">join</button>
        </div>
    </form>
</div>
</div>